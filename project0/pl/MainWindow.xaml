<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="LightPink"/>
            <Setter Property="Padding"
                    Value="6"/>
            <Setter Property="FontFamily"
                    Value="Ariel"/>

        </Style>
    </Window.Resources>
    <Grid RenderTransformOrigin="0.654,-0.868">
        <!-- … A button will take you to the list view window … -->
        <Button Width="144" Height="70" HorizontalAlignment="Left" Click="BtnTask_Click" Content="Handle Tasks" Margin="344,204,0,160"/>
        <Button Width="144" Height="70" HorizontalAlignment="Left" Click="BtnEngineers_Click" Content="Handle Engineers" Margin="112,203,0,161"/>
        <!-- …  A button that, when clicked, will lead to initializing the  … -->
        <Button Width="144"  Height="70" HorizontalAlignment="Left" Click="BtnDalTestInitialization_click" Content="Initialization" Margin="568,204,0,160"/>
    </Grid>
</Window>
    